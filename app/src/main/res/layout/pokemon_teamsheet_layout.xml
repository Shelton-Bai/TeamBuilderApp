<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/pName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Necrozma-Dawn-Wings"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/pAbility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:text="Ability"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pType1" />

            <TextView
                android:id="@+id/pItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Item"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pAbility" />

            <ImageView
                android:id="@+id/pType1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pName"
                app:srcCompat="@drawable/fire"
                app:tint="#FF0000" />

            <ImageView
                android:id="@+id/pType2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@+id/pType1"
                app:layout_constraintTop_toTopOf="@+id/pType1"
                app:srcCompat="@drawable/fire"
                app:tint="#FF0000" />

            <ImageView
                android:id="@+id/pSprite"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/detailsMoveDivider"
                app:srcCompat="@drawable/grass"
                app:tint="#00FF00" />

            <ImageView
                android:id="@+id/pItemSprite"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/pSprite"
                app:srcCompat="@drawable/fire"
                app:tint="#FF0000" />

            <View
                android:id="@+id/detailsMoveDivider"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/move1Type"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@+id/detailsMoveDivider"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/fire"
                app:tint="#FF0000" />

            <TextView
                android:id="@+id/pMove1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Move1"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/move1Type"
                app:layout_constraintStart_toEndOf="@+id/move1Type"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/move2Type"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:layout_constraintStart_toEndOf="@+id/detailsMoveDivider"
                app:layout_constraintStart_toStartOf="@+id/move1Type"
                app:layout_constraintTop_toBottomOf="@+id/move1Type"
                app:srcCompat="@drawable/fire"
                app:tint="#FF0000" />

            <TextView
                android:id="@+id/pMove2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Move2"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/move2Type"
                app:layout_constraintStart_toEndOf="@+id/move1Type"
                app:layout_constraintTop_toTopOf="@id/move2Type" />


            <ImageView
                android:id="@+id/move3Type"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:layout_constraintStart_toEndOf="@+id/detailsMoveDivider"
                app:layout_constraintStart_toStartOf="@+id/move2Type"
                app:layout_constraintTop_toBottomOf="@+id/move2Type"
                app:srcCompat="@drawable/fire"
                app:tint="#FF0000" />

            <TextView
                android:id="@+id/pMove3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Move3"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/move3Type"
                app:layout_constraintStart_toEndOf="@+id/move1Type"
                app:layout_constraintTop_toTopOf="@id/move3Type" />

            <ImageView
                android:id="@+id/move4Type"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:layout_constraintStart_toEndOf="@+id/detailsMoveDivider"
                app:layout_constraintStart_toStartOf="@+id/move3Type"
                app:layout_constraintTop_toBottomOf="@+id/move3Type"
                app:srcCompat="@drawable/fire"
                app:tint="#FF0000" />

            <TextView
                android:id="@+id/pMove4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Move4"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/move4Type"
                app:layout_constraintStart_toEndOf="@+id/move1Type"
                app:layout_constraintTop_toTopOf="@id/move4Type" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>