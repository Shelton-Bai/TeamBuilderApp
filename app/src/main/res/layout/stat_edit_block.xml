<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/statLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stat"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/remainingEVs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="EVs Left:"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/baseStatLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="Base: 100"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/statValueLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="Final: 100"
            android:textAlignment="textStart"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/naturePlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nature +" />

        <RadioButton
            android:id="@+id/natureMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Nature â€”" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/EVLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EVs"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/evField"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="0-252"
            android:inputType="number"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/evBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:max="252" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/IVLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IVs"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/ivField"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:layout_marginStart="6dp"
            android:ems="10"
            android:hint="0-31"
            android:inputType="number"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/ivBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:max="31" />
    </LinearLayout>

</LinearLayout>
